<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#fff">

    <LinearLayout
        android:background="#ff7473"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.29">


        <ImageButton
            android:id="@+id/mainplus"
            android:scaleType="fitXY"
            android:src="@drawable/pluswhite"
            android:background="#00000000"
            android:onClick="getCoin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"/>

        <TextView
            android:id="@+id/mainlogo"
            android:layout_marginLeft="50dp"
            android:textSize="35dp"
            android:textColor="#ffffff"
            android:text="금연 하자.."
            android:textStyle="normal"
            android:fontFamily="@font/my_font_family"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


    </LinearLayout><!-- 타이틀바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.97">

        <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
            android:id="@+id/autoViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager>

    </LinearLayout><!-- 이미지 슬라이드 -->
    <LinearLayout
        android:background="#ff7473"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sdate"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="2018-12-08 화요일 ~"
            android:textSize="30dp"
            android:textStyle="normal"
            android:fontFamily="@font/my_font_family"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp">

        <ProgressBar
            android:max="100"
            android:progress="20"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar_main"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="3dp">

            <TextView
                android:id="@+id/paste"
                android:gravity="center"
                android:text="30"
                android:textSize="30dp"
                android:textStyle="normal"
                android:fontFamily="@font/my_font_family"
                android:textColor="#fff"
                android:background="#6a000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

                <TextView
                    android:gravity="center"
                    android:text="일경과.."
                    android:textSize="15dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/my_font_family"
                    android:textColor="#fff"
                    android:background="#6a000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="3dp">

                <TextView
                    android:id="@+id/futuer"
                    android:gravity="center"
                    android:text="335"
                    android:textSize="35dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/my_font_family"
                    android:textColor="#fff"
                    android:background="#6a000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <TextView
                    android:gravity="center"
                    android:text="일남음.."
                    android:textSize="15dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/my_font_family"
                    android:textColor="#fff"
                    android:background="#6a000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout><!-- 프로그래스바 -->

    <LinearLayout
        android:background="#ff7473"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    <LinearLayout
        android:background="#fff"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>
    </LinearLayout><!-- 리스트 뷰 -->


</LinearLayout>